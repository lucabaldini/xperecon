include Makefile.arch
#------------------------------------------------------------------------------

OBJS = TPixy.$(ObjSuf) TMainGUI.$(ObjSuf) TInputFile.$(ObjSuf) \
	TEventDisplay.$(ObjSuf) THexagonCol.$(ObjSuf) \
	TDetector.$(ObjSuf) TCluster_hex.$(ObjSuf) TEditor.$(ObjSuf) PixiDict.$(ObjSuf)

PIXY = Pixy$(ExeSuf)

CINT_HDRS = TInputFile.h TMainGUI.h TEventDisplay.h THexagonCol.h TDetector.h TCluster_hex.h TEditor.h

#------------------------------------------------------------------------------
.SUFFIXES: .$(SrcSuf) .$(ObjSuf) .$(DllSuf)


$(PIXY):	$(OBJS)
		$(LD) $(LDFLAGS) $^ $(GLIBS) $(OutPutOpt)$@
		$(MT_EXE)
		@echo "$@ done"
		@echo  $(VC)  "ARCH: " $(ARCH) " PLATFORM: " $(PLATFORM)

clean:
	@rm -f $(OBJS) *Dict.* core *.exe *.exp *.lib

.SUFFIXES: .$(SrcSuf)

.$(SrcSuf).$(ObjSuf):
	$(CXX) $(CXXFLAGS) -c $<


TMainGUI.$(ObjSuf):TMainGUI.h
PixiDict.$(SrcSuf): TMainGUI.h PixiLinkDef.h
		@echo "Generating dictionary Dict..."
		rootcint -f $@ -c $^







